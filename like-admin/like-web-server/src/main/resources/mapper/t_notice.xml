<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.like.code.server.business.notice.mapper.NoticeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="ResultMap" type="cn.like.code.server.business.notice.entity.NoticeEntity">
        <result column="id" property="id" />
        <result column="create_by" property="createBy" />
        <result column="update_by" property="updateBy" />
        <result column="create_date" property="createDate" />
        <result column="update_date" property="updateDate" />
        <result column="version" property="version" />
        <result column="available" property="available" />
        <result column="is_deleted" property="isDeleted" />
        <result column="remark" property="remark" />
        <result column="notice_title" property="noticeTitle" />
        <result column="notice_type" property="noticeType" />
        <result column="notice_content" property="noticeContent" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="columnList">
        id, create_by, update_by, create_date, update_date, version, available, is_deleted, remark, notice_title, notice_type, notice_content, `status`
    </sql>

    <!-- 根据查询条件获取列表信息 -->
    <select id="listByQuery" resultMap="ResultMap" parameterType="cn.like.code.server.business.notice.pojo.query.NoticeQuery" >
        SELECT <include refid="columnList" />
        FROM t_notice
        <where>
            is_deleted = 0
            <include refid="query_sql" />
        </where>
    </select>

    <!-- 根据查询条件获取Id列表信息 -->
    <select id="listIdByQuery" resultType="java.lang.Long" parameterType="cn.like.code.server.business.notice.pojo.query.NoticeQuery" >
        SELECT id
        FROM t_notice
        <where>
            is_deleted = 0
            <include refid="query_sql" />
        </where>
    </select>

    <!-- 根据查询条件获取实体信息 -->
    <select id="findByQuery" resultMap="ResultMap" parameterType="cn.like.code.server.business.notice.pojo.query.NoticeQuery" >
        SELECT <include refid="columnList" />
        FROM t_notice
        <where>
            is_deleted = 0
            <include refid="query_sql" />
        </where>
        LIMIT 1
    </select>

    <!-- 根据查询条件获取表id -->
    <select id="findIdByQuery" resultType="java.lang.Long" parameterType="cn.like.code.server.business.notice.pojo.query.NoticeQuery" >
        SELECT id
        FROM t_notice
        <where>
            is_deleted = 0
            <include refid="query_sql" />
        </where>
        LIMIT 1
    </select>

    <!-- 根据查询条件获取分页信息 -->
    <select id="pageByQuery" resultMap="ResultMap" parameterType="cn.like.code.server.business.notice.pojo.query.NoticeQuery" >
        SELECT <include refid="columnList" />
        FROM t_notice
        <where>
            is_deleted = 0
            <include refid="query_sql" />
        </where>
        <include refid="order_by_sql"/>
        LIMIT #{query.start}, #{query.pageSize}
    </select>

    <!-- 根据查询条件获取总数量信息 -->
    <select id="totalCountByQuery" resultType="Integer" parameterType="cn.like.code.server.business.notice.pojo.query.NoticeQuery" >
        SELECT count(*)
        FROM t_notice
        <where>
            is_deleted = 0
            <include refid="query_sql" />
        </where>
    </select>

    <!-- 根据查询条件SQL -->
    <sql id="query_sql" >
        <if test="query.id != null">AND id = #{query.id}</if>
        <if test="query.noticeId != null">AND id = #{query.noticeId}</if>
        <if test="query.noticeTitle != null">AND notice_title = #{query.noticeTitle}</if>
        <if test="query.noticeType != null">AND notice_type = #{query.noticeType}</if>
        <if test="query.noticeContent != null">AND notice_content = #{query.noticeContent}</if>
        <if test="query.status != null">AND status = #{query.status}</if>
        <if test="query.ids != null and query.ids.size() > 0">
            AND id in
            <foreach item="item" collection="query.ids" separator="," open="(" close=")" index="">
                #{item}
            </foreach>
        </if>
    </sql>

    <!-- 排序的sql -->
    <sql id="order_by_sql">
        <if test="query.sortColumn != null and query.sortType != null" >
            ORDER BY
            <include refid="order_by_column_sql"/>
            <include refid="order_by_type_sql"/>
        </if>
    </sql>

    <!-- 排序列名的sql -->
    <sql id="order_by_column_sql">
        <choose>
            <when test="query.sortColumn == 'noticeId'">
                id
            </when>
            <otherwise>
                id
            </otherwise>
        </choose>
    </sql>

    <!-- 排序类型的sql -->
    <sql id="order_by_type_sql">
        <choose>
            <when test="query.sortType == 'DESC'">
                DESC
            </when>
            <otherwise>
                ASC
            </otherwise>
        </choose>
    </sql>
</mapper>
